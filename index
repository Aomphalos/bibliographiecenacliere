      let ligneIndex = 0;

      function typeWriterLine() {
        if (ligneIndex >= lignes.length) return;

        const line = lignes[ligneIndex];
        const para = document.createElement("p");
        const span = document.createElement("span");
        const cursor = document.createElement("span");
        cursor.classList.add("cursor");
        para.appendChild(span);
        para.appendChild(cursor);
        document.getElementById("list").appendChild(para);

        let fragIndex = 0,
          charIndex = 0;

        function typeChar() {
          if (fragIndex >= line.length) {
            para.removeChild(cursor);
            ligneIndex++;
            setTimeout(typeWriterLine, 800); // Pause avant prochaine ligne
            return;
          }

          const [text, italic] = line[fragIndex];
          const target = document.createElement(italic ? "i" : "span");
          span.appendChild(target);

          function typeLetter() {
            if (charIndex < text.length) {
              target.innerHTML += text.charAt(charIndex);
              charIndex++;
              setTimeout(typeLetter, 40); // vitesse de frappe par lettre
            } else {
              fragIndex++;
              charIndex = 0;
              typeChar();
            }
          }

          typeLetter();
        }

        typeChar();
      }

      window.onload = typeWriterLine;
    </script>
